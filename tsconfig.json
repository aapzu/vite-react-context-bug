{
  "compilerOptions": {
    "allowJs": true,
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["vite/client", "vite-plugin-svgr/client", "@types/jest"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true,
    "paths": {
      "@monorepo/aliased-dependency-package/*": [
        "../../node_modules/@monorepo/dependency-package/src/*"  
      ]
    }
  },
  "include": ["src"]
}
